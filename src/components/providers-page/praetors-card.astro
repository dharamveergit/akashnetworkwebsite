---
import ButtonLink from "../ui/button-link.astro";

const { title, description, badge, link, linkIcon, linkLabel } = Astro.props;
---

<div class="flex flex-col rounded-lg border bg-background2 p-5">
  <div>
    <h3 class="text-base font-semibold md:text-xl" set:html={title} />
    <p class={`mt-3 text-sm  `} set:html={description} />
  </div>

  <div class="flex flex-grow items-end gap-x-4">
    {
      link && (
        <div class="mt-14 flex justify-start">
          <ButtonLink
            arrow={linkIcon}
            link={link ? link : "#"}
            variant="secondary"
            size="lg"
          >
            <span class="text-xs leading-4 md:text-sm md:leading-5">
              {linkLabel}
            </span>
          </ButtonLink>
        </div>
      )
    }
  </div>
</div>
